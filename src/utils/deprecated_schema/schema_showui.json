{
  "name": "GUI Agent Output Schema",
  "type": "json_schema",
  "json_schema": {
    "name": "GUI Agent Output Schema",
    "schema": {
      "properties": {
        "thought": {
          "type": "string",
          "description": "Agent internal reasoning (not executed)."
        },
        "action": {
          "type": "string",
          "enum": [
            "CLICK",
            "LONG_CLICK",
            "SWIPE",
            "INPUT",
            "BACK",
            "HOME",
            "TERMINATE",
            "INTERRUPT"
          ],
          "description": "Type of GUI action to perform."
        },
        "value": {
          "type": [
            "string",
            "null"
          ],
          "description": "Optional value for actions like INPUT."
        },
        "position": {
          "type": "array",
          "items": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1000
            },
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1000
            }
          ],
          "minItems": 2,
          "maxItems": 2,
          "description": "Normalized 0-1000 screen coordinate for action."
        },
        "box_2d": {
          "type": "array",
          "items": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1000
            },
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1000
            },
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1000
            },
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1000
            }
          ],
          "minItems": 4,
          "maxItems": 4,
          "description": "[ymin, xmin, ymax, xmax] coordinates."
        },
        "interrupt": {
          "type": "object",
          "properties": {
            "reason": {
              "type": "string"
            },
            "question": {
              "type": "string"
            }
          },
          "required": [
            "reason",
            "question"
          ],
          "description": "Details for human intervention."
        }
      },
      "required": [
        "thought",
        "action"
      ],
      "additionalProperties": false
    }
  }
}